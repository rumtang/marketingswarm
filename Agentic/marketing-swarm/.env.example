# Core Configuration
# For testing without real API key, use: sk-mock-testing-key
OPENAI_API_KEY=your_openai_api_key_here
FASTAPI_SECRET_KEY=your_secret_key_here
DATABASE_URL=sqlite:///./marketing_swarm.db

# Safety & Budget Controls
DAILY_API_BUDGET=50.00
MAX_SEARCHES_PER_SESSION=25
MAX_SEARCHES_PER_AGENT=5
SESSION_TIMEOUT_MINUTES=10
MAX_CONVERSATION_EXCHANGES=50

# Performance Limits
MAX_CONCURRENT_USERS=10
API_TIMEOUT_SECONDS=30
RESPONSE_TIME_LIMIT=45
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85

# Security Settings
ENABLE_INPUT_SANITIZATION=true
LOG_USER_QUERIES=false
MASK_PII_IN_LOGS=true
REQUIRE_DEMO_MODE_AUTH=true

# Optional Configuration
REDIS_URL=redis://localhost:6379
LOG_LEVEL=INFO
SEARCH_CACHE_TTL=300
ENABLE_DEMO_FALLBACKS=true
ENABLE_COMPLIANCE_FILTERS=true

# Development Settings
DEV_MODE=true
MOCK_API_RESPONSES=false
ENABLE_DEBUG_CONSOLE=true